<!--
   The body of of the main html page dynamically created by Handlebars   
-->

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="navbar-header">
            <div class="navbar-brand">
                <a href="#"><img class="img-responsive" src="/assets/images/gb.png" width="48" height="48"></a>
                <h3 class="navbar-text">Packers Scraper</h3>
            </div>
        </div>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link scrape-articles" href="#">Scrape New Articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link clear-articles" href="#">Clear Articles</a>
            </li>
            </ul>
        </div>
    </nav>

    <!-- Image Bar -->     
    <div class="row main-image">
        <img class="packers-image img-fluid" src="/assets/images/Packers.jpg" alt="packers image">
    </div>

    <!-- Packer News Articles -->
    <div class="container">
        <div class="articles">
            {{#if articles.length}}
                <ul>
                {{#each articles}}
                    <li>
                        <img class="article-image img-fluid" src={{this.image}}>
                        <a class="article-link" href="{{this.link}}" target="_blank">{{this.title}}</a>
                        <p class="article-description">{{this.description}}</p>
                        <button data-id="{{this.id}}" class="btn btn-primary add-note">Article Notes</button>
                        <hr>
                    </li>
                 {{/each}}
                </ul>
            {{else}}
                <br>
                <div class=info-message>
                    <h3 class="info-message">No articles to display. Please click the 'Scrape New Articles' link.</h3>
                </div>
                <br>
            {{/if}}
        </div>
    </div> 

    <!-- Modal dialog to add/list article notes -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content -->
            <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="tab-title">Notes for this article</h4>
            </div>
            <div class="modal-body">
                <div class="article-notes">
                    <ul class="notes-list">
                        <li class="note-item">
                            <span class="article-note">No notes available for this article</span>
                        </li>
                    </ul>
                </div> 
                <br>  
                <textarea class="new-note" rows=4 cols=57 placeholder="Add a note"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn btn-primary note-save-button">Add Note</button>
                <button type="button" class="btn btn btn-danger note-exit-button" data-dismiss="modal">Exit</button>
            </div>
            </div>

        </div>
    </div>

    <footer class="page-footer">
            <!-- Image Bar -->     
            <div class="row footer-image">
                <img class="packers-image packers-footer-image img-fluid" src="/assets/images/Packers.jpg" alt="packers image">
            </div>
        </div>

    </footer>

        